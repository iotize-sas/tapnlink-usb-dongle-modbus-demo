{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["./*"],
      "app-theme": ["./app/app-theme"],
      "tap-api": ["./app/tap-api"],
      "tap-api/*": ["./app/tap-api/*"],
      "app-lib": ["./app/app-lib"],
      "app-lib/*": ["./app/app-lib/*"],
      "logger": ["./app/logger"]
    }
  },
  "exclude": ["test.ts", "**/*.spec.ts"]
}
